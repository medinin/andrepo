<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.FaceScan1">

    <LinearLayout
        android:id="@+id/tabNavWrap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="60dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/editTabLink"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/ic_edit_gray_icon" />

            <TextView
                android:layout_width="14dp"
                android:layout_height="3dp"
                android:background="#8e63e6" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/faceScanTabLink"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="5dp"
                android:src="@drawable/facial_recognition_purple_tab_link"
                android:textAlignment="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="14dp"
                android:layout_height="3dp"
                android:background="#8e63e6"
                android:visibility="invisible" />


        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/doneBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#8e63e6"
        android:gravity="center_horizontal|center_vertical"
        android:tag="true"
        android:text="DONE"
        android:textColor="#f0ffffff"

        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>