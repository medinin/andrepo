                        <LinearLayout
                            android:id="@+id/otpInputWrap"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:gravity="center_horizontal"
                            android:orientation="horizontal"
                            android:paddingBottom="30dp"
                            android:visibility="gone"
                            android:weightSum="2"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/user_sec_wrap"
                            app:srcCompat="@drawable/border_bottom">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="0dp"
                                android:orientation="vertical"
                                android:weightSum="2"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/get_otp_txt"
                                        style="@style/new_label_style"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="0dp"
                                        android:layout_marginTop="8dp"
                                        android:layout_marginEnd="0dp"
                                        android:fontFamily="@font/sfprotextregular"
                                        android:text="4-Digit OTP"
                                        android:textColor="#88a1ac"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toTopOf="parent" />


                                    <TextView
                                        android:id="@+id/countDownTxt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginEnd="0dp"
                                        android:layout_marginRight="16dp"
                                        android:fontFamily="@font/sfprotextmedium"
                                        android:text="2:36"
                                        android:textAlignment="textEnd"
                                        android:textColor="#282f3f"
                                        android:textSize="12sp"
                                        app:layout_constraintEnd_toEndOf="parent" />

                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/otp_inputSec"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="0dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginEnd="0dp"
                                    android:orientation="horizontal"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@+id/get_otp_txt">

                                    <LinearLayout
                                        android:layout_width="65dp"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <EditText
                                            android:id="@+id/otpInputOne"
                                            android:layout_width="match_parent"
                                            android:layout_height="30dp"
                                            android:layout_marginTop="2dp"
                                            android:background="@color/transparent"
                                            android:inputType="number"
                                            android:maxLength="1"
                                            android:textAlignment="center"
                                            android:textColor="#282f3f"
                                            android:textSize="22sp"
                                            app:layout_constraintStart_toStartOf="parent"
                                            app:layout_constraintTop_toTopOf="parent" />

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="4dp"
                                            android:layout_marginTop="2dp"
                                            android:background="@drawable/input_otp_bottom_color" />
                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="65dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:orientation="vertical">

                                        <EditText
                                            android:id="@+id/otpInputTwo"
                                            android:layout_width="match_parent"
                                            android:layout_height="30dp"
                                            android:layout_marginTop="2dp"
                                            android:background="@color/transparent"
                                            android:inputType="number"
                                            android:maxLength="1"
                                            android:textAlignment="center"
                                            android:textColor="#282f3f"
                                            android:textSize="22sp"
                                            app:layout_constraintStart_toEndOf="@+id/otpNumberInputOne"
                                            app:layout_constraintTop_toTopOf="parent" />

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="4dp"
                                            android:layout_marginTop="2dp"
                                            android:background="@drawable/input_otp_bottom_color" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="65dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:orientation="vertical">

                                        <EditText
                                            android:id="@+id/otpInputThree"
                                            android:layout_width="match_parent"
                                            android:layout_height="30dp"
                                            android:layout_marginTop="2dp"
                                            android:background="@color/transparent"
                                            android:inputType="number"
                                            android:maxLength="1"
                                            android:textAlignment="center"
                                            android:textColor="#282f3f"
                                            android:textSize="22sp"
                                            app:layout_constraintStart_toEndOf="@+id/otpNumberInputTwo"
                                            app:layout_constraintTop_toTopOf="parent" />

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="4dp"
                                            android:layout_marginTop="2dp"
                                            android:background="@drawable/input_otp_bottom_color" />

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_width="65dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginStart="10dp"
                                        android:orientation="vertical">

                                        <EditText
                                            android:id="@+id/otpInputFour"
                                            android:layout_width="match_parent"
                                            android:layout_height="30dp"
                                            android:layout_marginTop="2dp"
                                            android:background="@color/transparent"
                                            android:inputType="number"
                                            android:maxLength="1"
                                            android:textAlignment="center"
                                            android:textColor="#282f3f"
                                            android:textSize="22sp"
                                            app:layout_constraintStart_toEndOf="@+id/otpNumberInputThree"
                                            app:layout_constraintTop_toTopOf="parent" />

                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="4dp"
                                            android:layout_marginTop="2dp"
                                            android:background="@drawable/input_otp_bottom_color" />

                                    </LinearLayout>
                                </LinearLayout>

                                <android.support.constraint.ConstraintLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">

                                    <TextView
                                        android:id="@+id/voice_otp_txt"
                                        style="@style/new_label_style"
