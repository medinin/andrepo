<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:background="@drawable/on_hover_color"
    android:onClick="addNewPresRow">

    <TextView
        android:id="@+id/medicine_name_txt"
        style="@style/search_dropdown_items_txt"
        android:layout_width="wrap_content"
        android:clickable="false"
        android:maxWidth="700.0dip"
        android:paddingBottom="12.0dip"
        android:paddingEnd="10.0dip"
        android:paddingTop="12.0dip"
        android:text=""
        android:visibility="gone"
        android:tag=""
        android:textColor="#e6282f3f"
        android:textSize="14.0sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/strength_value_and_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="12.0dip"
        android:paddingEnd="10.0dip"
        android:paddingTop="12.0dip"
        android:textAllCaps="true"
        android:visibility="gone"
        android:textColor="#e6282f3f"
        android:textSize="14.0sp"
        app:layout_constraintStart_toEndOf="@+id/medicine_name_txt"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/medicine_name_and_unit_txt"
        style="@style/search_dropdown_items_txt"
        android:layout_width="wrap_content"
        android:clickable="false"
        android:maxWidth="700.0dip"
        android:paddingBottom="12.0dip"
        android:paddingEnd="10.0dip"
        android:paddingTop="12.0dip"
        android:text=""
        android:tag=""
        android:textColor="#e6282f3f"
        android:textSize="14.0sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/medicine_trade_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingBottom="12.0dip"
        android:paddingEnd="10.0dip"
        android:paddingTop="12.0dip"
        android:textColor="#e6282f3f"
        android:textSize="12.0sp"
        android:visibility="gone"
        app:layout_constraintStart_toEndOf="@+id/medicine_name_and_unit_txt"
        app:layout_constraintTop_toTopOf="parent" />
</android.support.constraint.ConstraintLayout>